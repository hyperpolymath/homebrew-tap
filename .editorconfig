root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Homebrew formulas (Ruby)
[*.rb]
indent_size = 2

# Nix expressions
[*.nix]
indent_size = 2

# Shell scripts and PKGBUILDs
[*.sh]
indent_size = 2

[PKGBUILD]
indent_size = 2

# YAML (Flatpak, Snap, workflows)
[*.{yml,yaml}]
indent_size = 2

# JSON (Scoop, WinGet)
[*.json]
indent_size = 2

# AsciiDoc
[*.adoc]
indent_size = 2
max_line_length = 100

# Markdown
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# XML (Flatpak metainfo)
[*.xml]
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab

[justfile]
indent_style = space
indent_size = 4

# Git config
[.git*]
indent_size = 2
